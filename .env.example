# Turso Database Configuration
TURSO_DATABASE_URL=libsql://your-database-url.turso.io
TURSO_AUTH_TOKEN=your-auth-token

# Steam API (for game data integration)
STEAM_API_KEY=your-steam-api-key

# IGDB API (for comprehensive game metadata)
IGDB_CLIENT_ID=your-igdb-client-id
IGDB_CLIENT_SECRET=your-igdb-client-secret

# JWT Secret for authentication
JWT_SECRET=your-jwt-secret-key

# Application URLs
PUBLIC_APP_URL=http://localhost:5173

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@rovora.com

# Development Email (Ethereal Email for testing)
# In development, emails will be sent to Ethereal Email
# Check console for preview URLs